<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.teacher.TeacherRepository">

    <select id="findByName" resultType="com.example.demo.model.teacher_info.TeacherInfo">
        SELECT * FROM teachers WHERE name = #{name}
    </select>

    <select id="findByUserName" resultType="com.example.demo.model.teacher_info.TeacherInfo">
        SELECT * FROM teachers WHERE user_name = #{userName}
    </select>

    <select id="findByUserId" resultType="com.example.demo.model.teacher_info.TeacherInfo">
        SELECT * FROM teachers WHERE id = #{teacherId}
    </select>

    <select id="findByEmail" resultType="com.example.demo.model.teacher_info.TeacherInfo">
        SELECT * FROM teachers WHERE email = #{email}
    </select>

    <select id="findByPhone" resultType="com.example.demo.model.teacher_info.TeacherInfo">
        SELECT * FROM teachers WHERE phone = #{phone}
    </select>

    <insert id="insertTeacher">
        INSERT INTO teachers (id, name, user_name, email, phone, /* other columns */) VALUES (#{id}, #{name}, #{userName}, #{email}, #{phone} /* other values */)
    </insert>

    <update id="updateTeacher">
        UPDATE teachers SET name = #{name}, user_name = #{userName}, email = #{email}, phone = #{phone} /* other columns */ WHERE id = #{id}
    </update>

    <delete id="deleteTeacherById">
        DELETE FROM teachers WHERE id = #{id}
    </delete>

</mapper>
