<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demoMyBatis.repository.CarTypeRepository">

    <resultMap id="CarTypeResultMap" type="com.example.demoMyBatis.model.CarType">
        <id column="id" property="id" />
        <result column="type" property="type" />
    </resultMap>

    <select id="findAllCarTypes" resultMap="CarTypeResultMap">
        SELECT * FROM car_types
    </select>

    <select id="findCarTypeById" parameterType="int" resultMap="CarTypeResultMap">
        SELECT * FROM car_types WHERE id = #{id}
    </select>

    <select id="findCarTypeByTypeName" parameterType="string" resultMap="CarTypeResultMap">
        SELECT * FROM car_types WHERE type = #{type}
    </select>

    <insert id="insertCarType" parameterType="com.example.demoMyBatis.model.CarType" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO car_types (type, attributes) VALUES (#{type}, #{attributes})
    </insert>



    <update id="updateCarType" parameterType="com.example.demoMyBatis.model.CarType">
        UPDATE car_types SET type = #{type} WHERE id = #{id}
    </update>

    <delete id="deleteCarTypeById" parameterType="int">
        DELETE FROM car_types WHERE id = #{id}
    </delete>

</mapper>
