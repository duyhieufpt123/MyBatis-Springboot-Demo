<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demoMyBatis.repository.CarBrandRepository">

    <resultMap id="CarBrandResultMap" type="com.example.demoMyBatis.model.CarBrand">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="findAllCarBrands" resultMap="CarBrandResultMap">
        SELECT * FROM car_brands
    </select>

    <select id="findCarBrandById" parameterType="int" resultMap="CarBrandResultMap">
        SELECT * FROM car_brands WHERE id = #{id}
    </select>

    <select id="findCarBrandByName" parameterType="string" resultMap="CarBrandResultMap">
        SELECT * FROM car_brands WHERE name = #{name}
    </select>


    <insert id="insertCarBrand" parameterType="com.example.demoMyBatis.model.CarBrand">
        INSERT INTO car_brands (name) VALUES (#{name})
    </insert>

    <update id="updateCarBrand" parameterType="com.example.demoMyBatis.model.CarBrand">
        UPDATE car_brands SET (name) = #{name} WHERE id = #{id}
    </update>

    <delete id="deleteCarBrandById" parameterType="int">
        DELETE FROM car_brands WHERE id = #{id}
    </delete>

</mapper>
