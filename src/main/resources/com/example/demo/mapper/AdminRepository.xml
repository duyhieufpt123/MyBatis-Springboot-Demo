<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.classyapp.backendapi.repository.AdminRepository">

    <resultMap id="UserResultMap" type="com.example.classyapp.backendapi.model.User">
        <id column="id" property="id" />
        <result column="userName" property="userName" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="dateOfBirth" property="dateOfBirth" />
        <result column="userRole" property="userRole" />
        <result column="status" property="status" />
    </resultMap>

    <select id="findByStatus" resultMap="UserResultMap">
        SELECT * FROM users WHERE status = #{status}
    </select>
    
    <select id="findByUserRole" resultMap="UserResultMap">
        SELECT * FROM users WHERE user_role = #{role}
    </select>
</mapper>
